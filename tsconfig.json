{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node", 
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    
    "outDir": "./dist",          
    "rootDir": "./",         
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],       
  "exclude": ["node_modules", "dist"]
}